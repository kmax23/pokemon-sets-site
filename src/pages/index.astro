---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getAllSets } from "../lib/firestore.server.js";

const sets = await getAllSets();
---

<BaseLayout title="All Sets">
  <h1 class="text-4xl font-bold mb-6">Pok√©mon Sets</h1>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
    {sets.map(set => (
      <a href={`/sets/${set.id}/`} class="block bg-white p-4 rounded-lg shadow hover:shadow-lg">
        <h2 class="text-xl font-semibold">{set.name}</h2>
        <p class="text-sm text-gray-500">Released: {set.releaseDate}</p>
        <p class="text-sm text-gray-500">{set.totalCards} cards</p>
      </a>
    ))}
  </div>
</BaseLayout>
