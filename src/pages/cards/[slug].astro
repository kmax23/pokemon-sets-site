---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { fetchCardsBySet, fetchCard } from '../../lib/pokemontcg.js';

// Provide paths for static generation
export async function getStaticPaths() {
  const setId = 'base1'; // change if you want other sets
  const cards = await fetchCardsBySet(setId);

  // ✅ only generate static pages for the first 20 cards to keep build fast
  return cards.slice(0, 20).map(card => ({
    params: { slug: card.id },
  }));
}

const { slug } = Astro.params;

// ✅ Safe fetch with fallback
let card = await fetchCard(slug);
---

<BaseLayout title={card?.name || 'Card not found'}>
  <div class="max-w-3xl mx-auto p-6">
    {card ? (
      <>
        <h1 class="text-4xl font-bold mb-4">{card.name}</h1>
        <img src={card.images.small} alt={card.name} class="w-full rounded-lg mb-4" />
        <p class="mb-2"><strong>Set:</strong> {card.set.name}</p>
        <p class="mb-2"><strong>Rarity:</strong> {card.rarity || 'Unknown'}</p>
        <p class="mb-2"><strong>Type:</strong> {card.types?.join(', ') || 'Unknown'}</p>
        <p class="mb-2"><strong>HP:</strong> {card.hp || 'Unknown'}</p>
        <div class="mt-6">
          <a href={`/sets/${card.set.id}`} class="text-blue-500 hover:underline">
            &larr; Back to {card.set.name}
          </a>
        </div>
      </>
    ) : (
      <p class="text-red-500">⚠️ Card data unavailable.</p>
    )}
  </div>
</BaseLayout>